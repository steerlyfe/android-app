<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.napworks.steerlyfeapp.fontPackage.CustomTextViewBold
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/grey_background_with_stroke"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:textStyle="bold" />

    <com.napworks.steerlyfeapp.fontPackage.CustomTextViewBold
        android:id="@+id/productValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@drawable/transparent_white_background_with_grey_stroke"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textColor="@color/pure_black"
        android:textSize="12sp"

        android:textStyle="bold" />

</LinearLayout>